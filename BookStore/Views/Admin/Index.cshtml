@model BookStore.Models.AdminViewModel
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>
<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>#</th>
            <th>@Html.DisplayNameFor(model => model.Books[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.Books[0].Description)</th>
            <th>@Html.DisplayNameFor(model => model.Books[0].Author)</th>
            <th>@Html.DisplayNameFor(model => model.Books[0].Cost)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.Books)
        {
            <tr>
                <td>@Html.DisplayFor(model => book.Id)</td>
                <td>@Html.DisplayFor(model => book.Name)</td>
                <td>@Html.DisplayFor(model => book.Description)</td>
                <td>@Html.DisplayFor(model => book.Author)</td>
                <td>@Html.DisplayFor(model => book.Cost)</td>
                <td class="text-right">
                    @Html.ActionLink("Delete", "DeleteBook", "Admin", new { bookId = book.Id }, new { @class = "btn btn-danger" })
                </td>
                <td class="text-right">
                    @Html.ActionLink("Edit", "DeleteBook", "Admin", new { bookId = book.Id }, new { @class = "btn btn-warning" })
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.ActionLink("Create new", "CreateBook", "Admin", new { @class = "btn btn-primary" })
@Html.PagedListPager(Model.Books, page => Url.Action("Index", new { page }))